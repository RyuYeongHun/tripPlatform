	   				console.log("AJAX selectSearch 요청 성공, 데이터:", data); // 반환된 데이터를 콘솔에 출력
	   				// 모든 기존 마커와 인포윈도우 제거
	   	            if (typeof markers !== 'undefined') {
	   	                for (var i = 0; i < markers.length; i++) {
	   	                    markers[i].marker.setMap(null); // 마커 제거
	   	                    markers[i].infowindow.setMap(null); // 인포윈도우 제거
	   	                }
	   	            }
	   	        	markers = [];
	   				$.each(data, function(index, item){
	   					var position = new kakao.maps.LatLng(item.mapY, item.mapX);
	   	                var content = '<div><img src="' + item.firstImage2 + '" width="50px" height="50px"></div><div>' + item.title + '</div>';
	   	          		// 마커 생성
	   	                var marker = new kakao.maps.Marker({
	   	                    map: map,
	   	                    position: position,
	   	                    title: item.title
	   	                });

	   	                // 정보창 생성
	   	                var infowindow = new kakao.maps.InfoWindow({
	   	                    content: content,
	   	                 	position: position
	   	                });
	   	             	infowindow.open(map, marker);

	   	                markers.push({
	   	                	marker: marker,
	   	                	infowindow: infowindow
	   	                });
	   	            });	   				
   				}
	   		})
	   	}
	   	
	 	// top버튼
